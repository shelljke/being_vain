<Window x:Class="one_click_fix.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:one_click_fix"
        mc:Ignorable="d"
        Title="MainWindow" Height="550" Width="900">
    <Grid>
        <Button x:Name="start_B" Content="Начать" HorizontalAlignment="Center" Margin="0,0,0,0" VerticalAlignment="Center" Width="75" Click="start_B_Click"/>
        <Image x:Name="mainImage_I" HorizontalAlignment="Center" VerticalAlignment="Center" Visibility="Hidden"/>
        <Image x:Name="blackAndWhite_I" Margin="10,0,0,25" HorizontalAlignment="Left" Width="110" Height="60" VerticalAlignment="Bottom" RenderTransformOrigin="0.5,1.5" PreviewMouseLeftButtonDown="blackAndWhite_I_PreviewMouseLeftButtonDown" Source="italiya-more-pirs-noch-groza.jpg" Visibility="Hidden"/>
        <Slider x:Name="slider" HorizontalAlignment="Left" Margin="10,499,0,0" VerticalAlignment="Top" Height="10" Width="872" Maximum="1" ValueChanged="slider_ValueChanged"/>
    </Grid>
</Window>
